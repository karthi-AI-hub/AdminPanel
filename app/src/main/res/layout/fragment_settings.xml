<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <TextView
        android:id="@+id/SplashLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Splash Screen Status"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/SplashSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Splash Screen" />

    <TextView
        android:id="@+id/WithdrawLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Withdraw Screen Status"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="16dp" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/WithdrawSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Withdraw Screen" />
</LinearLayout>
